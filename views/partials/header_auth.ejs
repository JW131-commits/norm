<header>
  <h1 class="decode__blog">Decode Blog</h1>
  <div class="search">
    <form method="GET" action="/myblogs"> 
      <input type="text" name="search" value="<%= search || '' %>" placeholder="Поиск по блогам..." />
      <button type="submit" class="button-search">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>
  </div>  
  <div class="auth-button">
    <img src="img/avatar.png" alt="avatar" onclick="redirectToPage('/')" />
  </div>
</header>
